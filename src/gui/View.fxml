<AnchorPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.ViewController">
   <children>
      <Label layoutX="57.0" layoutY="43.0" text="Calculate Sum: ">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <TextField fx:id="txtNumberOne" layoutX="57.0" layoutY="83.0" promptText="First Number" />
      <TextField fx:id="txtNumberTwo" layoutX="57.0" layoutY="125.0" promptText="Second Number" />
      <Button fx:id="btnSum" layoutX="57.0" layoutY="163.0" mnemonicParsing="false" onAction="#onBtnSumAction" text="Sum" />
      <Label layoutX="57.0" layoutY="212.0" text="Result =">
         <font>
            <Font name="Verdana" size="12.0" />
         </font>
      </Label>
      <Label fx:id="lblResult" layoutX="118.0" layoutY="211.0" prefHeight="15.0" prefWidth="40.0" />
   </children>
</AnchorPane>
